@model IQueryable<Article>

@{
    ViewData["Title"] = "Новое";
}

<!-- Section -->
<section>
    <div class="posts">
        @if (Model.Any())
        {
            @foreach (Article article in Model)
            {
                <article>
                    <a href="#" class="image"><img src="~/images/@article.ImagePath" alt="" height="310" /></a>
                    <h3>@article.Title</h3>
                    @Html.Raw(article.Text)
                    <ul class="actions">
                        <li><a href="#" class="button">Подробнее</a></li>
                    </ul>
                </article>
            }
        }
    </div>
</section>