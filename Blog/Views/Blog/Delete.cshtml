@model Article

@{
    ViewData["Title"] = "Удаление";
}


<div class="row">
    <div class="col-3 col-12-small"></div>
    <div class="col-6 col-12-small">
        <h1></h1>
        <h2>Вы действительно хотите удалить статью "@Model.Title"?</h2>
        <h2> Статья будет удалена безвозвратно!</h2>
        <form asp-controller="Blog" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
    <div class="col-3 col-12-small"></div>
</div>

