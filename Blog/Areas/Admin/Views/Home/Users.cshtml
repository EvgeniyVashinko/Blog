@model IQueryable<User>
@inject Microsoft.AspNetCore.Identity.UserManager<User> userManager

@{
    ViewData["Title"] = "Пользватели";
}

<h1>Пользователи</h1>

<div class="table-wrapper">
    <table class="alt">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Email</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <ul class="actions">
                            <li><a asp-area="admin" asp-controller="Home" asp-action="DeleteUser" asp-route-id="@user.Id" class="button">Удалить</a></li>
                            <li><a asp-area="admin" asp-controller="Home" asp-action="Articles" asp-route-id="@user.Id" class="button">Статьи</a></li>
                            @if (userManager.IsInRoleAsync(await userManager.GetUserAsync(User), "superadmin").Result)
                            {
                                @if (userManager.IsInRoleAsync(user, "admin").Result)
                                {
                                    <li><a asp-area="admin" asp-controller="Home" asp-action="ChangeUserRole" asp-route-id="@user.Id" class="button">Забрать роль</a></li>
                                }
                                else
                                {
                                    <li><a asp-area="admin" asp-controller="Home" asp-action="ChangeUserRole" asp-route-id="@user.Id" class="button">Дать роль</a></li>
                                }
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>