@model IQueryable<User>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<div class="table-wrapper">
    <table class="alt">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Email</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <ul class="actions">
                            <li><a asp-area="admin" asp-controller="Home" asp-action="DeleteUser" asp-route-id="@user.Id" class="button">Удалить</a></li>
                            <li><a asp-area="admin" asp-controller="Home" asp-action="Articles" asp-route-id="@user.Id" class="button">Статьи</a></li> 
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>