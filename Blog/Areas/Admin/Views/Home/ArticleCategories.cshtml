@model IQueryable<Category>

@{
    ViewData["Title"] = "Категории статей";
}

<h1>Категории статей</h1>

<div class="table-wrapper">
    <table class="alt">
        <thead>
            <tr>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <ul class="actions">
                            <li><a asp-area="admin" asp-controller="Home" asp-action="EditArticleCategory" asp-route-id="@category.Id" class="button">Изменить</a></li>
                            <li><a asp-area="admin" asp-controller="Home" asp-action="DeleteArticleCategory" asp-route-id="@category.Id" class="button">Удалить</a></li>
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-area="admin" asp-controller="Home" asp-action="EditArticleCategory" class="button">Добавить</a>
    </div>
</div>